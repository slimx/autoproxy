<?xul-overlay href="chrome://autoproxy/content/ui/overlayGeneral.xul"?>

<overlay id="aup-overlay" xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
  <!-- Window extensions -->
  <window id="messengerWindow">
    <popupset id="aup-popupset"/>
    <keyset id="aup-keyset"/>
    <commandset id="aup-commandset"/>
    <box id="aup-hooks" getBrowser="return window.messageContent;"
      addTab="let tabmail = E('tabmail');return (tabmail ? tabmail.openTab('contentTab', {contentPage: arguments[0]}) : false);"
      getToolbox="return E('mail-toolbox')"
      getDefaultToolbar="return E('mail-bar2') || E('msgToolbar');" toolbarInsertBefore="return E('button-junk');"/>
  </window>

  <!-- Status bar -->
  <statusbar id="status-bar">
    <statusbarpanel id="aup-status"/>
  </statusbar> 

  <!-- toolbar -->
  <toolbarpalette id="MailToolbarPalette">
    <toolbarbutton id="aup-toolbarbutton" type="menu-button" insertafter="button-junk"
        class="chromeclass-toolbar-additional toolbarbutton-1"/>
  </toolbarpalette>

  <!-- tools menu -->
  <menupopup id="taskPopup">
    <menuitem id="aup-menuitem" insertafter="downloadmgr,javaScriptConsole"/>
  </menupopup>

  <!-- Fake sidebar -->
  <vbox id="messagepanebox">
    <splitter id="aup-sidebar-splitter"/>
    <vbox id="aup-sidebar"/>
  </vbox>
</overlay>
